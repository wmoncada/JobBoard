@model IEnumerable<JobBoard.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Jobs list</h1>

<div class="row">
    <div class="col-sm">
        <a asp-action="Create">Create New</a>
    </div>
    <div class="col-sm">
        <form asp-controller="Job" asp-action="Index" class="form-inline float-right" method="GET">
            <input type="text" name="searchString" class="form-control col" placeholder="Search for jobs" />
            <input class="btn btn-primary" type="submit" value="Search">
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiresAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiresAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
